<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.clinica.controladores.AgendarCitaControlador"
      spacing="30.0"
      alignment="CENTER" style="-fx-padding: 30px">

    <Label text="Registro de citas">
        <font>
            <Font size="20.0" />
        </font>
    </Label>

    <GridPane vgap="20.0" hgap="20.0" alignment="CENTER">

        <Label text="Cédula paciente:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="txtCedulaPaciente" prefWidth="250.0" prefHeight="30.0" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Día:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <DatePicker fx:id="dpDiaCita" prefWidth="250.0" prefHeight="30.0" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Hora:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <ComboBox fx:id="cbHoraCita" prefWidth="250.0" prefHeight="30.0" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="Servicio:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <ComboBox fx:id="cbServicio" prefWidth="250.0" prefHeight="30.0" GridPane.rowIndex="3" GridPane.columnIndex="1" />

    </GridPane>

    <Button text="Crear cita" prefWidth="160.0" prefHeight="40.0" onAction="#registrarCita"  />

</VBox>
