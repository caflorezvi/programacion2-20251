<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.concurso.controladores.SubirFotoControlador"
      spacing="30.0"
      alignment="CENTER" style="-fx-padding: 30px">

    <Label text="Subir foto">
        <font>
            <Font size="20.0" />
        </font>
    </Label>

    <GridPane vgap="20.0" hgap="20.0" alignment="CENTER">

        <Label text="Nombre fotográfico:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="nombreFotografo" prefWidth="250.0" prefHeight="30.0" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Cédula fotógrafo: " GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="cedulaFotografo" prefWidth="250.0" prefHeight="30.0" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Concursos:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <ComboBox fx:id="comboConcurso" prefWidth="250.0" prefHeight="30.0" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="Categorías:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <ComboBox fx:id="comboCategoria" prefWidth="250.0" prefHeight="30.0" GridPane.rowIndex="3" GridPane.columnIndex="1" />

    </GridPane>

    <Button text="Crear foto" prefWidth="160.0" prefHeight="40.0" onAction="#registrarFoto"  />

</VBox>
